<h1>
	<% if params[:available] %>
		Listing Non Drafted Players
	<% else %>
		Listing All Players
	<% end %>
</h1>
<%= will_paginate @players %>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Position</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= link_to player.name, player_permalink_path(player.permalink) %></td>
    <td><%= player.position %></td>
  </tr>
<% end %>
</table>

